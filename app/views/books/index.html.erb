<div class="container">
  <h1 class="text-center font-weight-bold">Books</h1>
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-lg-4">
        <section class="my-1">
          <%= render 'devise/profile' %>
        </section>
        <section id="api_weather">
        </section>
      </div>
    <% end %>

    <div class="col-lg-8 mx-auto">
      <% if user_signed_in?%>
        <% if current_user.admin? %>
          <section class="border text-justify">
            <%= render 'form', book: @book %>
          </section>
        <% end %>
        <section class="my-1">
          <%= search_form_for @q do |f| %>
          <div class="form-group">
            <%= f.label :title_cont, 'Search a Book', class: 'h5 font-weight-light' %>
            <%= f.search_field :title_cont, class: 'form-control', placeholder: 'Write part of the full title of the book' %>
          </div>

          <div class="d-flex flex-row justify-content-end">
            <%= f.submit "Search", class: 'btn btn-success' %>
          </div>
          <% end %>
        </section>
      <% end %>
      
      <section class="my-1" id="bookList">
        <%= render 'book', book: @book %>
      </section>
      <div class="d-flex justify-content-end my-2">
        <%= link_to_previous_page @books, 'Prev Page', class: "text-decoration-none text-light btn btn-info btn-lg" %>
        <%= link_to_next_page @books, 'Next Page', class: "text-decoration-none btn btn-info btn-lg text-light" %>
      </div>
    </div>
  </div>
</div>



