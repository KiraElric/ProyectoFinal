<% @books.each do |book| %>
  <div class="col-12 border border-secondary rounded py-2">
    <article class="media">
      <div class="align-self-start">
        <figure class="figure">
          <img src="http://placehold.jp/64x64.png" class="figure-img img-fluid rounded img-thumbnail" alt="...">
        </figure>
      </div>
      <div class="media-body px-3">
        <h5 class="mt-0"><%= book.title %></h5>       
        <strong class="mt-0">Author: <%= book.authors_name %></strong>
        <div class="d-flex justify-content-between">
        <small>Publisher: <%= book.publishers_name %></small>
        <small>Genre: <%= book.genre %></small>
        </div>
      </div>
    </article>
    <div class="icon-link d-flex justify-content-end">
      <ul class="list-group list-group-horizontal list-unstyled list-inline">
        <li class="list-group-item list-inline-item">
          <%= link_to book, class: "text-decoration-none text-reset" do %>
            <span class="icon"><i class="fas fa-book-open"></i></span>
          <% end %>
        </li>
        <li class="list-group-item list-inline-item">
          <%= link_to edit_book_path(book), class: "text-decoration-none text-reset" do %>
            <span class="icon"><i class="fas fa-edit"></i></span>
          <% end %>
        </li>
        <li class="list-group-item list-inline-item">
          <%= link_to book, class: "text-decoration-none text-reset", method: :delete, data: { confirm: 'Are you sure you want to delete this book?' } do %>
            <span class="icon"><i class="fas fa-trash"></i></span>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
<% end %>
