<div class="col-lg-12 py-2">
  <%= form_with(model: book_collection) do |form| %>
    <% if book_collection.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(book_collection.errors.count, "error") %> prohibited this book_collection from being saved:</h2>

        <ul>
          <% book_collection.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= form.label :book_id, 'Book', class: 'h5 font-weight-light' %>
      <%= form.select :book_id, @books, include_blank: true %>
    </div>

    <div class="field">
      <%= form.label :state, 'State', class: 'h5 font-weight-light' %>
      <%= form.select :state, @states, include_blank: true %>
    </div>

    <div class="field">
      <%= form.label :owned, 'Owned', class: 'h5 font-weight-light' %>
      <%= form.check_box :owned %>
    </div>

    <div class="actions d-flex justify-content-end py-2">
      <%= form.submit "Save", class: 'btn btn-success', data: { disable_with: 'Adding a Book!' }%>
    </div>
  <% end %>
</div>
