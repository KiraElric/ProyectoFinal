<div class="container">
  <h1 class="text-center font-weight-bold">Books</h1>
  <div class="row">
    <div class="col-lg-4">
      <section class="my-1">
        <%= render 'profile' %>
      </section>
    </div>
    <div class="col-lg-8">
      <section class="my-1">
        <%= render 'books/book', book: @book %>
        <div class="d-flex justify-content-end my-2">
          <%= link_to_previous_page @books, 'Prev Page', class: "text-decoration-none text-light btn btn-info btn-lg" %>
          <%= link_to_next_page @books, 'Next Page', class: "text-decoration-none btn btn-info btn-lg text-light" %>
        </div>
      </section>
      <br>
    </div>
  </div>
</div>
